<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/blue_lagoon"
    tools:context=".HighscoreActivity">

    <TextView
        android:id="@+id/mCongratulationsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/product_sans_bold"
        android:gravity="center"
        android:shadowColor="#FFFFFF"
        android:shadowDx="0.01"
        android:shadowDy="0.01"
        android:shadowRadius="20"
        android:textColor="#FFFFFF"
        android:textSize="50sp"
        android:textStyle="bold" />

    <com.robinhood.ticker.TickerView
        android:id="@+id/mScoreValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/mCongratulationsTitle"
        android:layout_marginBottom="85dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/product_sans_regular"
        android:gravity="center"
        android:shadowColor="#FFD700"
        android:shadowDx="0.1"
        android:shadowDy="0.1"
        android:shadowRadius="50"
        android:textColor="#FFD700"
        android:textSize="100sp"
        app:ticker_animationDuration="2500" />

    <Button
        android:id="@+id/mNext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"

        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:background="@drawable/button"
        android:fontFamily="@font/product_sans_regular"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:text="Next"
        android:textColor="#FFFFFF"
        android:theme="@style/AppTheme.WhiteRipple" />
</RelativeLayout>